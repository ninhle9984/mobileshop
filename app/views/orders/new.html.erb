<div class="container wrapper">
            <div class="row cart-body">
                <form class="form-horizontal" method="post" action="">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 col-md-push-6 col-sm-push-6">
                    <!--REVIEW ORDER-->
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            Review Order <div class="pull-right"><small><a class="afix-1" href="#">Edit Cart</a></small></div>
                        </div>
                        <div class="panel-body">
                          <% @cart.line_items.each do |item| %>
                                                      <div class="form-group"><hr /></div>
                            <div class="form-group">
                                <div class="col-sm-3 col-xs-3">
                                    <img class="img-responsive" src="//c1.staticflickr.com/1/466/19681864394_c332ae87df_t.jpg" />
                                </div>
                                <div class="col-sm-6 col-xs-6">
                                    <div class="col-xs-12">Product name</div>
                                    <div class="col-xs-12"><small>Quantity:<span><%= item.quantity %></span></small></div>
                                </div>
                                <div class="col-sm-3 col-xs-3 text-right">
                                    <h6><span>$</span><%= item.total_price %></h6>
                                </div>
                            </div>
                        <% end %>

                            <div class="form-group"><hr /></div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <strong>Order Total</strong>
                                    <div class="pull-right"><span>$</span><span><%= @cart.total_price %></span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--REVIEW ORDER END-->
                </div>


<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 col-md-pull-6 col-sm-pull-6">
  <div class="panel panel-info">
    <div class="panel-heading">Checkout form</div>

     <div class="panel-body">
       <div class="form-group">
         <div class="col-md-12">
           <h4>Shiping Address </h4>
         </div>
       </div>

       <%= form_for @order do |f|%>
         <div class="form-group">
           <div class="col-md-12">
             <%= f.label :name%>
             <%= f.text_field :name, class: "form-control"%>
           </div>
         </div>

         <div class="form-group">
           <div class="col-md-12">
             <%= f.label :email%>
             <%= f.text_field :email, class: "form-control"%>
           </div>
         </div>

         <div class="form-group">
           <div class="col-md-12">
             <%= f.label :address%>
             <%= f.text_field :address, class: "form-control"%>
           </div>
         </div>

         <div class="form-group">
           <div class="col-md-12">
             <%= f.label :phone%>
             <%= f.number_field :phone, class: "form-control"%>
           </div>
         </div>

         <div class="form-group">
           <div class="col-md-12">
             <%= f.submit "Submit", class: "btn btn-primary form-control" %>
           </div>
         </div> 

       <% end %>
     </div>
  </div>
</div>
                
                </form>


            </div>
    </div>
