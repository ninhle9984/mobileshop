<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="features_items">
        <h2 class="title text-center"><%= t "order" %></h2>
      </div>
      <div class="panel panel-primary">
        <div class="add-to-cart-button"><%= t "product" %></div>
        <div class="panel-body">
          <table class="table table-striped table-hover">
            <tr>
              <th><%= t "name_order" %></th>
              <th><%= t "email" %></th>
              <th><%= t "address" %></th>
              <th><%= t "phone" %></th>
              <th></th>
            </tr>
            <tr>
              <td><%= line_item.order.name %></td>
              <td><%= line_item.order.email %></td>
              <td><%= line_item.order.address %></td>
              <td><%= line_item.order.phone %></td>
              <td></td>
            </tr>
            <tr>
              <th><%= t "product" %></th>
              <th><%= t "quantity" %></th>
              <th><%= t "price" %></th>
              <th><%= t "total_price" %></th>
              <th><%= t "time_buy" %></th>
            </tr>
            <% line_items.each do |line_item| %>
              <tr>
                <td><%= link_to line_item.product.name, product_path(line_item.product) %></td>
                <td><%= line_item.quantity %></td>
                <td><%= number_to_currency line_item.price %></td>
                <td><%= number_to_currency line_item.total_price %></td>
                <td><%= l line_item.created_at %></td>
              </tr>
            <% end %>
            <h3>
              <%= t "total_price"%>:
              <%= number_to_currency line_items.inject(0) {|sum,f| sum + f.total_price } %> |
              <%= t "status" %>: <%= line_item.order.order_status %>
              <% if order.processing? %>
                | <%= link_to t("cancel"), order_path, method: :patch %>
              <% end %>
            </h3>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
