<% provide :title, t("brand") %>
<%= render "admin/static_pages/header" %>
<section id="main">
  <div class="container">
    <div class="row">
      <%= render "admin/static_pages/sidebar" %>
      <div class="col-md-9">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">
              <%= t "brand" %>
            </h3>
          </div>
          <div class="panel-body">
            <div class="panel-footer">
              <%= link_to t("add_new_brand"), new_admin_brand_path %>
            </div>
            <table class="table table-striped table-hover">
              <tr>
                <th><%= t "name_brand" %></th>
                <th><%= t "quantity" %></th>
              </tr>
              <% @brands.each do |brand| %>
                <tr>
                  <td><%= link_to brand.name, admin_brand_path(brand) %></td>
                  <td><%= brand.products.count %> <%= t "product" %></td>
                </tr>
              <% end %>
            </table>
            <div class="panel-footer"><%= will_paginate @brands %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
