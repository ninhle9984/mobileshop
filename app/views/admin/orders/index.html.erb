<% provide :title, t("product") %>
<%= render "admin/static_pages/header" %>
<section id="main">
  <div class="container">
    <div class="row">
      <%= render "admin/static_pages/sidebar" %>
      <div class="col-md-9">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title"><%= t "order" %></h3>
          </div>
          <div class="panel-body">
            <table class="table table-striped table-hover">
              <tr>
                <th><%= t "name_order" %></th>
                <th><%= t "address" %></th>
                <th><%= t "status" %></th>
                <th><%= t "time_buy" %></th>
                <th><%= t "option" %></th>
              </tr>
              <% @orders.each do |order| %>
                <tr>
                  <% if order.user_id? %>
                    <td><%= order.user.name %></td>
                  <% else %>
                    <td><%= t "quest" %></td>
                  <% end %>
                  <td><%= order.address %></td>
                  <td><%= order.order_status %></td>
                  <td><%= l order.created_at %></td>
                  <td><%= link_to t("detail"), admin_order_path(order) %> |
                    <%= link_to t("edit"), edit_admin_order_path(order)  %> |
                    <%= link_to t("delete"), admin_order_path(order),
                      method: :delete, data: {confirm: t("are_you_sure")} %>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
          <%= will_paginate @orders %>
        </div>
      </div>
    </div>
  </div>
</section>
