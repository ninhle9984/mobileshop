<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-md-offset-1">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= t ".product" %></th>
            <th><%= t ".quantity" %></th>
            <th class="text-center"><%= t ".price" %></th>
            <th class="text-center"><%= t  ".total" %></th>
            <th> </th>
          </tr>
        </thead>
        <tbody>
          <% @cart.line_items.each do |item| %>
            <tr>
              <td class="col-sm-2 col-md-3">
                <div class="media">
                  <%= link_to "","#", class: "thumbnail pull-left" %>
                    <h4 class="media-heading"><a href="#"><%= item.product.name %></a></h4>
                    <h5 class="media-heading"> by <a href="#">Brand name</a></h5>
                    <span>Status: </span><span class="text-success"><strong>In Stock</strong></span>
                  </div>
                  </div>
              </td>
              <td class="col-sm-1 col-md-1">
                  <input type="email" class="form-control" id="exampleInputEmail1" value="<%= item.quantity %>" disabled>
              </td>
              <td class="col-sm-1 col-md-1 text-center"><strong><%= item.product.price %></strong></td>
              <td class="col-sm-1 col-md-1 text-center"><strong><%= item.total_price %></strong></td>
              <td class="col-sm-1 col-md-1">
               <%= button_to line_item_path(item.id), method: :delete, class: "btn btn-danger" do %>
                  <span class="glyphicon glyphicon-remove"></span> <%= t ".remove" %>
                <% end %>
              </td>
            </tr>
          <% end %>

          <tr>
            <td>   </td>
            <td>   </td>
            <td>   </td>
            <td><h3>Total</h3></td>
            <td class="text-right"><h3><strong><%= @cart.total_price %></strong></h3></td>
          </tr>
          <tr>
              <td><%= button_to cart_path, method: :delete, class: "btn btn-primary" do %>
                <%= t ".empty" %>
              <% end %>
              </td>
              <td>   </td>
              <td>   </td>
              <td>
                <button type="button" class="btn btn-default">
                  <span class="glyphicon glyphicon-shopping-cart"></span> <%= t ".continue" %>
                </button>
              </td>
              <td>
                <%= button_to new_order_path, method: :get, class: "btn btn-success" do%>
                  <%= t ".checkout" %> <span class="glyphicon glyphicon-play"></span>
                <% end %>
              </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
